<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lavender"
    android:padding="16dp">

    <!-- Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Profile Picture with Rounded Background -->
        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_profile"
            android:layout_marginEnd="8dp"
            android:contentDescription="Profile picture"
            android:background="@drawable/rounded_background"
            android:padding="4dp"
            android:elevation="4dp" />

        <!-- Profile Name Text -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Divider for a Smooth Transition -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Settings Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT PROFILE"
            android:textSize="50dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/white_roundcorners"
            />


        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Full name"
            android:inputType="text"
            android:padding="16dp"
            android:background="@drawable/holeblue_roundcorners"
            android:textColor="@android:color/white"
            android:textColorHint="#cdd2d4" />


        <Button
            android:id="@+id/updateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="confirm"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/holo_blue_bright"
            android:backgroundTint="@color/semi_transparent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="50dp"
            android:shadowRadius="@android:integer/config_shortAnimTime"/>




    </LinearLayout>
</LinearLayout>
