<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lavender"
    android:padding="16dp">

    <!-- Profile Section with Profile Picture and Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Profile Picture with Rounded Background -->
        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_profile"
            android:layout_marginEnd="8dp"
            android:contentDescription="Profile picture"
            android:background="@drawable/rounded_background"
            android:padding="4dp"
            android:elevation="4dp" />

        <!-- Profile Name Text -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textSize="18sp"
            android:textColor="#4A4A4A"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Divider for Smooth Transition -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Title for the Challenges Section -->
    <TextView
        android:id="@+id/challenges_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly Challenges"
        android:textSize="24sp"
        android:textColor="#4A4A4A"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Challenges Section within a Single RelativeLayout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Challenge Icon 1 -->
        <ImageView
            android:id="@+id/challenge_icon1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_challenge_score_24"
            android:contentDescription="Challenge icon"
            android:layout_alignParentStart="true"
            android:background="@color/black"/>

        <!-- Challenge 1 Title -->
        <TextView
            android:id="@+id/challenge_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenge 1"
            android:textSize="18sp"
            android:textColor="#4A4A4A"
            android:fontFamily="sans-serif-medium"
            android:layout_toEndOf="@id/challenge_icon1"
            android:layout_marginStart="12dp" />

        <!-- Challenge 1 Description -->
        <TextView
            android:id="@+id/challenge_description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete 5 games this week to earn rewards!"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_below="@id/challenge_title1"
            android:layout_toEndOf="@id/challenge_icon1"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif-light" />

        <!-- Challenge Icon 2 -->
        <ImageView
            android:id="@+id/challenge_icon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_challenge_score_24"
            android:contentDescription="Challenge icon"
            android:layout_below="@id/challenge_description1"
            android:layout_marginTop="16dp"
            android:background="@color/black"/>

        <!-- Challenge 2 Title -->
        <TextView
            android:id="@+id/challenge_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenge 2"
            android:textSize="18sp"
            android:textColor="#4A4A4A"
            android:fontFamily="sans-serif-medium"
            android:layout_toEndOf="@id/challenge_icon2"
            android:layout_alignTop="@id/challenge_icon2"
            android:layout_marginStart="12dp" />

        <!-- Challenge 2 Description -->
        <TextView
            android:id="@+id/challenge_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play with a new player this week."
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_below="@id/challenge_title2"
            android:layout_toEndOf="@id/challenge_icon2"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif-light" />

        <!-- Challenge Icon 3 -->
        <ImageView
            android:id="@+id/challenge_icon3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_challenge_score_24"
            android:contentDescription="Challenge icon"
            android:layout_below="@id/challenge_description2"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            />

        <!-- Challenge 3 Title -->
        <TextView
            android:id="@+id/challenge_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenge 3"
            android:textSize="18sp"
            android:textColor="#4A4A4A"
            android:fontFamily="sans-serif-medium"
            android:layout_toEndOf="@id/challenge_icon3"
            android:layout_alignTop="@id/challenge_icon3"
            android:layout_marginStart="12dp" />

        <!-- Challenge 3 Description -->
        <TextView
            android:id="@+id/challenge_description3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make one new friend"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_below="@id/challenge_title3"
            android:layout_toEndOf="@id/challenge_icon3"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif-light" />
    </RelativeLayout>

</LinearLayout>
