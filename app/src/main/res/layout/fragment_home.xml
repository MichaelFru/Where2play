<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lavender"
    android:padding="16dp">

    <!-- Profile Section with Profile Picture and Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Profile Picture with Rounded Background -->
        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_profile"
            android:layout_marginEnd="8dp"
            android:contentDescription="Profile picture"
            android:background="@drawable/rounded_background"
            android:padding="4dp"
            android:elevation="4dp" />

        <!-- Profile Name Text -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Divider for a Smooth Transition -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Centered App Logo -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/app_logo"
        android:contentDescription="App logo"
        android:layout_gravity="center_horizontal"
        android:elevation="6dp"
        android:backgroundTint="#E6E6FA" />

    <!-- Welcome Text Below the Logo -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Where2Play!"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-light"
        android:shadowColor="#A9A9A9"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3" />

    <!-- App Description Below the Welcome Text -->
    <TextView
        android:id="@+id/app_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find sports venues nearby, check availability, and connect with players."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-light" />

</LinearLayout>
